<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<GridPane fx:controller="javafxgui.Controller"
          stylesheets="/javafxgui/javafxgui.css"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="20" vgap="20">
    <padding>
        <Insets top="5" right="5" bottom="5" left="5"/>
    </padding>
    <gridLinesVisible>true</gridLinesVisible>
    <Label textAlignment="CENTER" GridPane.columnIndex="0" fx:id="gametitle" text="Tic Tac Toe"/>
    <GridPane fx:id="gameboard" alignment="center" hgap="10" vgap="10" GridPane.rowIndex="1" GridPane.columnIndex="0">
        <padding>
            <Insets top="5" right="5" bottom="5" left="5"/>
        </padding>
        <gridLinesVisible>true</gridLinesVisible>
        <Button disable="true" GridPane.columnIndex="0" GridPane.rowIndex="0" text="1" fx:id="zero"
                onAction="#positionSelected"/>
        <Button disable="true" GridPane.columnIndex="1" GridPane.rowIndex="0" text="2" fx:id="one"
                onAction="#positionSelected"/>
        <Button disable="true" GridPane.columnIndex="2" GridPane.rowIndex="0" text="3" fx:id="two"
                onAction="#positionSelected"/>
        <Button disable="true" GridPane.columnIndex="0" GridPane.rowIndex="1" text="4" fx:id="three"
                onAction="#positionSelected"/>
        <Button disable="true" GridPane.columnIndex="1" GridPane.rowIndex="1" text="5" fx:id="four"
                onAction="#positionSelected"/>
        <Button disable="true" GridPane.columnIndex="2" GridPane.rowIndex="1" text="6" fx:id="five"
                onAction="#positionSelected"/>
        <Button disable="true" GridPane.columnIndex="0" GridPane.rowIndex="2" text="7" fx:id="six"
                onAction="#positionSelected"/>
        <Button disable="true" GridPane.columnIndex="1" GridPane.rowIndex="2" text="8" fx:id="seven"
                onAction="#positionSelected"/>
        <Button disable="true" GridPane.columnIndex="2" GridPane.rowIndex="2" text="9" fx:id="eight"
                onAction="#positionSelected"/>
    </GridPane>
    <GridPane fx:id="options" alignment="center" hgap="10" vgap="10" GridPane.rowIndex="3" GridPane.columnIndex="0">
        <!--<ComboBox id="comboInterval" fx:id="comboTime" editable="false" layoutX="14.0" layoutY="22.0"-->
                  <!--onAction="#options">-->
            <!--<items>-->
                <!--<ObservableList>-->
                    <!--<String fx:value="/4"/>-->
                <!--</ObservableList>-->
            <!--</items>-->
        <!--</ComboBox>-->
        <Label GridPane.columnIndex="0" GridPane.rowIndex="3" text="Board Dimension:"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="dimension"/>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="4" text="Type of Game:"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="4" fx:id="gametype"/>
        <HBox fx:id="box" alignment="BOTTOM_CENTER" GridPane.columnIndex="1" GridPane.rowIndex="5"
              GridPane.fillWidth="true">
            <Button text="Start Game" fx:id="startgame" onAction="#start"/>
        </HBox>
    </GridPane>
    <stylesheets>
        <URL value="@javafxgui.css"/>
    </stylesheets>
</GridPane>