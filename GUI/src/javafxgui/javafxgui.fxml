<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<GridPane fx:controller="javafxgui.Controller"
          stylesheets="/javafxgui/javafxgui.css"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>
    <!--<gridLinesVisible>true</gridLinesVisible>-->
    <Text GridPane.rowIndex="0" GridPane.columnIndex="1" fx:id="gametitle" text="Tic Tac Toe"/>
    <GridPane fx:id="gameboard" hgap="10" vgap="10" GridPane.rowIndex="1" GridPane.columnIndex="1">
        <padding>
            <Insets top="25" right="25" bottom="25" left="25"/>
        </padding>
        <Button disable="true" GridPane.columnIndex="1" GridPane.rowIndex="1" text="1" fx:id="zero"
                onAction="#positionSelected"/>
        <Button disable="true" GridPane.columnIndex="2" GridPane.rowIndex="1" text="2" fx:id="one"
                onAction="#positionSelected"/>
        <Button disable="true" GridPane.columnIndex="3" GridPane.rowIndex="1" text="3" fx:id="two"
                onAction="#positionSelected"/>
        <Button disable="true" GridPane.columnIndex="1" GridPane.rowIndex="2" text="4" fx:id="three"
                onAction="#positionSelected"/>
        <Button disable="true" GridPane.columnIndex="2" GridPane.rowIndex="2" text="5" fx:id="four"
                onAction="#positionSelected"/>
        <Button disable="true" GridPane.columnIndex="3" GridPane.rowIndex="2" text="6" fx:id="five"
                onAction="#positionSelected"/>
        <Button disable="true" GridPane.columnIndex="1" GridPane.rowIndex="3" text="7" fx:id="six"
                onAction="#positionSelected"/>
        <Button disable="true" GridPane.columnIndex="2" GridPane.rowIndex="3" text="8" fx:id="seven"
                onAction="#positionSelected"/>
        <Button disable="true" GridPane.columnIndex="3" GridPane.rowIndex="3" text="9" fx:id="eight"
                onAction="#positionSelected"/>
    </GridPane>
    <Label GridPane.columnIndex="0" GridPane.rowIndex="5" text="Board Dimension:"/>
    <TextField GridPane.columnIndex="2" GridPane.rowIndex="5" fx:id="dimension"/>
    <Label GridPane.columnIndex="0" GridPane.rowIndex="6" text="Type of Game:"/>
    <TextField GridPane.columnIndex="2" GridPane.rowIndex="6" fx:id="gametype"/>
    <HBox alignment="BOTTOM_CENTER" GridPane.columnIndex="2" GridPane.rowIndex="8" GridPane.fillWidth="true">
        <Button text="Start Game" fx:id="startgame" onAction="#start"/>
    </HBox>
    <stylesheets>
        <URL value="@javafxgui.css"/>
    </stylesheets>
</GridPane>